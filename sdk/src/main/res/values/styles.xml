    </style>

    <!-- Chat background -->
    <style name="JivoSDK.ChatBackground" parent="Main.Theme.JivoSDK">
        <item name="android:background">@color/jivo_sdk_surface</item>
    </style>

    <!-- Outgoing bubble background -->
