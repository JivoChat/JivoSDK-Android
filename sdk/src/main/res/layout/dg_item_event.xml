<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="view"
            type="com.jivosite.sdk.ui.chat.items.event.EventItemViewHolder" />

        <variable
            name="viewModel"
            type="com.jivosite.sdk.ui.chat.items.event.EventItemViewModel" />

    </data>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:paddingHorizontal="36dp"
        android:text="@{@string/chat_system_disconnected(viewModel.code, viewModel.reason)}"
        android:textColor="@color/jivo_sdk_color_on_surface_38"
        android:textSize="14sp"
        tools:text="Event message"/>

</layout>